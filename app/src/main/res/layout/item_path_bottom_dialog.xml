<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 页面标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingBottom="16dp"
        android:text="Path Type"
        android:textColor="#3C4043"
        android:textSize="24sp" />

    <!-- 上层的两个按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="15dp">

        <LinearLayout
            android:id="@+id/layoutFusion"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageFusion"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="9dp"
                android:src="@drawable/ic_fusion" /> <!-- 替换为你的图片资源 -->
            <TextView
                android:id="@+id/textFusion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fusion"
                android:textColor="#3C4043" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutPDR"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagePDR"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="9dp"
                android:src="@drawable/ic_pdr" /> <!-- 替换为你的图片资源 -->
            <TextView
                android:id="@+id/textPDR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDR"
                android:textColor="#3C4043" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/layoutWifi"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageWifi"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="9dp"
                android:src="@drawable/ic_wifi" /> <!-- 替换为你的图片资源 -->
            <TextView
                android:id="@+id/textWifi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WIFI"
                android:textColor="#3C4043" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutGNSS"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageGNSS"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="9dp"
                android:src="@drawable/ic_gnss" /> <!-- 替换为你的图片资源 -->
            <TextView
                android:id="@+id/textGNSS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GNSS"
                android:textColor="#3C4043" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
