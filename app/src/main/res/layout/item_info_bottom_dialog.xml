<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- 页面标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="10dp"
        android:text="Current Fusion Location"
        android:textSize="24sp"
        android:textColor="#3C4043" />

    <!-- 上层的两个按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <!-- 纬度信息布局 -->
        <LinearLayout
            android:id="@+id/layer_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/layer_latitude_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="9dp"
                android:src="@drawable/latitude"/> <!-- 替换为你的图片资源 -->
            <TextView
                android:id="@+id/layer_latitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textColor="#3C4043" />
        </LinearLayout>

        <!-- 经度信息布局 -->
        <LinearLayout
            android:id="@+id/layer_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/layer_longitude_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="9dp"
                android:src="@drawable/longitude" /> <!-- 替换为你的图片资源 -->
            <TextView
                android:id="@+id/layer_longitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3C4043"
                android:text="Satellite" />
        </LinearLayout>

        <!-- 海拔信息布局 -->
        <LinearLayout
            android:id="@+id/layer_altitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/layer_altitude_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="9dp"
                android:src="@drawable/altitude" /> <!-- 替换为你的图片资源 -->
            <TextView
                android:id="@+id/layer_altitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#3C4043"
                android:text="Terrain" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
