<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#88000000"/> <!-- 阴影颜色，这里使用半透明黑色 -->
            <corners android:radius="15dp"/> <!-- 阴影圆角应与主形状圆角相同 -->
            <padding
                android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp"/>
        </shape>
    </item>

    <!-- 主形状层 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <solid android:color="#FFFFFF"/> <!-- 你的主形状颜色 -->
        </shape>
    </item>
</layer-list>
